<h1><%=@place["name"]%></h1>

<ul>
    <%for post in @posts%>
    <h2> <%= post["title"]%> </h2>
    <h5>  <%= post["posted_on"]%> </h5> 
    <p>  <%= post["description"]%></p> 
    <%end%>
</ul>
<p>
    <a href="/posts/new?place_id=<%=@place["id"]%>"> New Post for <%=@place["name"]%> </a>
</p>
<p>
    <a href="/places">Back to all places</a>
</p>
